<!-- app.ejs
render one application provided in app
-->
<h2><%= app.name %></h2>
<div id=app<%= app.id %>>
<ul><% for (var prop in app ) {
	if (typeof app[prop] == 'function' || prop == 'name')
		continue;%>
	<li><%= prop %>: 
		<% if (prop == 'watchFiles') { var files = app[prop]
			if (!files.length) { %>None<% } else { %>
			<ul><% files.forEach(function(file) { %>
				<li><%= file %></li>
			<% }) %></ul>
		<% } } else { %>
		<%= app[prop] %><% } %>
	</li><% } %>
</ul>
<!-- we can't show/hide until buttons on the page, so assume a state -->
<button class='control dodebug'>Debug</button>
<button class='control donodebug' style=display:none>No Debug</button>
<button class='control dorun'>Start</button>
<button class='control dorestart' style=display:none>Restart</button>
<button class='control dostop' style=display:none>Stop</button>
</div>
